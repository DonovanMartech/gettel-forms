extends layout
include mixins/formCard

block content
  .row.g-3      
    .col-12 
      h2 Get form submissions for:


    .col-12        

      form(action='/all' method="GET").row.g-3
        div.col-12.col-md-6.col-lg-4
          label(for="year").form-label Year
          select(name="year" id="year").form-select
            //- option(value="2023") 2023
            //- option(value="2024") 2024
            //- option(value="2025") 2025
            //- option(value="2026") 2026
            //- option(value="2027") 2027
            //- option(value="2028") 2028
            //- option(value="2029") 2029
            //- option(value="2030") 2030
            //- option(value="2031") 2031
            //- option(value="2032") 2032
        div.col-12.col-md-6.col-lg-4
          label(for="month").form-label.mx-2 Month
          select(name="month" id="month").form-select
            - for (let i = 1; i <= 12; i++)
              if i < 10
                - let monthWithZero = "0" + i
                option(value=monthWithZero) #{monthNames[i - 1]}
              else
                option(value=i) #{monthNames[i - 1]}
        div.col-12
          input(name="formInfo" type="hidden" value=formInfo)
          button(type="submit").btn.btn-primary#getSubs 
            span.spinner-border.spinner-border-sm(role="status" aria-hidden="true").d-none
            span Submit

  .row.mt-5.g-3.mb-5
    .col-12
      h2 Active Forms

    each f in ogForms
      +formCard(f)

